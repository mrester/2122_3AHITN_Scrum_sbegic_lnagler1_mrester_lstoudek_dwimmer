<VBox alignment="CENTER" prefHeight="295.0" prefWidth="544.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.scrum.Shipplacement">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" />
   <GridPane fx:id="gridpane" onMouseClicked="#onHelloButtonClick" styleClass="Gidpane" stylesheets="@schiffe_versenken.css">
     <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
         <RowConstraints minHeight="-Infinity" prefHeight="20.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="-Infinity" prefHeight="20.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="-Infinity" prefHeight="20.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="-Infinity" prefHeight="20.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="-Infinity" prefHeight="20.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="-Infinity" prefHeight="20.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="-Infinity" prefHeight="20.0" vgrow="SOMETIMES" />
     </rowConstraints>
   </GridPane>
   <ChoiceBox fx:id="shipType" prefWidth="150.0" />
   <TextField fx:id="shipX" promptText="X" />
   <TextField fx:id="shipY" promptText="Y" />
   <ChoiceBox fx:id="shipRotation" prefWidth="150.0" />
   <Button fx:id="butt" mnemonicParsing="false" onAction="#save" text="Button" />
</VBox>
